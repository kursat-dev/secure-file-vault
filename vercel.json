{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ],
    "functions": {
        "server/index.js": {
            "includeFiles": "server/prisma/**"
        }
    },
    "buildCommand": "cd client && npm install && npm run build && cd ../server && npm install && npx prisma generate",
    "outputDirectory": "client/dist"
}