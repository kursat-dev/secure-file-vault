datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  files     File[]
}

model File {
  id            String   @id @default(uuid())
  originalName  String
  encryptedName String
  mimeType      String
  size          Int
  iv            String
  authTag       String
  encryptedKey  String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
}
